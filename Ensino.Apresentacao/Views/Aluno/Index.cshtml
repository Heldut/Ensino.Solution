@{
    ViewData["Title"] = "Alunos";
}

<!-- Main content -->
<section class="content">

    <div class="row">

        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Alunos</h3>
                </div>
                <div class="card-body">

                    <table id="tabelaAluno"
                           class="table table-bordered table-striped"
                           style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Mensalidade</th>
                                <th>Data Vencimento</th>
                                <th>Professor</th>
                                <th>Excluir</th>
                            </tr>
                        </thead>
                    </table>

                </div>

            </div>

        </div>

    </div>

    <div class="row">
        <br />
    </div>

    <div class="row">

        <div class="col-6">

            <label class="custom-file-label" for="customFile">Cadastro via arquivo de Texto:</label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile">
            </div>

        </div>

    </div>

    <input type="hidden" name="inputIdProfessor" id="inputIdProfessor" value="@ViewBag.IdProfesor" />

</section>
@section scripts{
    <script src="~/js/AlunoList.js"></script>
    <script src="~/js/AlunoUploadFile.js"></script>
}

